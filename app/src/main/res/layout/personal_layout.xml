<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //定義
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="姓名："
        android:id="@+id/tv_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="年齡："
        android:id="@+id/tv_age"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="身高："
        android:id="@+id/tv_height"
        android:layout_below="@+id/tv_age"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"  />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="體重："
        android:layout_below="@+id/tv_height"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_weight" />

    //單位
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="歲"
        android:id="@+id/textView28"
        android:layout_alignBottom="@+id/edit_age"
        android:layout_toEndOf="@+id/edit_age" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="公分"
        android:id="@+id/textView29"
        android:layout_alignBottom="@+id/edit_height"
        android:layout_toEndOf="@+id/edit_height" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="公斤"
        android:id="@+id/textView30"
        android:layout_alignBottom="@+id/edit_weight"
        android:layout_toEndOf="@+id/edit_weight" />

    //輸入

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:id="@+id/edit_name"
        android:layout_above="@+id/tv_age"
        android:layout_toEndOf="@+id/tv_name" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/edit_weight"
        android:layout_alignBottom="@+id/tv_weight"
        android:layout_toEndOf="@+id/tv_weight" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/edit_height"
        android:layout_alignBottom="@+id/tv_height"
        android:layout_toEndOf="@+id/tv_height" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/edit_age"
        android:layout_alignBottom="@+id/tv_age"
        android:layout_toEndOf="@+id/tv_age"/>

</RelativeLayout>